---
import Layout from './Layout.astro';

const {
  title,
  description,
  url,
  productName,
  tagline,
  gradient = 'from-brand-600 to-brand-900',
  portal,
  contact,
  states,
  minPremium
} = Astro.props;

const base = import.meta.env.BASE_URL;
---

<Layout title={title} description={description} url={url}>
  <!-- Hero Section with Gradient -->
  <div class={`relative overflow-hidden bg-gradient-to-br ${gradient} dark:from-brand-700 dark:to-brand-950`}>
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_30%_50%,rgba(255,255,255,0.1),transparent)]"></div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 md:py-28">
      <div class="max-w-4xl">
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 leading-tight">
          {productName}
        </h1>
        <p class="text-xl md:text-2xl text-brand-50 leading-relaxed mb-8">
          {tagline}
        </p>

        <!-- Quick Actions -->
        <div class="flex flex-wrap gap-4">
          {portal && (
            <a
              href={portal}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center px-8 py-4 rounded-lg bg-white text-brand-600 hover:bg-brand-50 font-semibold shadow-lg hover:shadow-xl transition-all"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
              Get a Quote
            </a>
          )}
          <a
            href={`${base}contact`}
            class="inline-flex items-center px-8 py-4 rounded-lg border-2 border-white text-white hover:bg-white/10 font-semibold transition-all"
          >
            Contact Underwriting
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Quick Stats Bar -->
  <div class="bg-slate-50 dark:bg-slate-900 border-b border-slate-200 dark:border-slate-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 text-center">
        {states && (
          <div>
            <div class="text-sm font-medium text-slate-600 dark:text-slate-400 mb-1">Active States</div>
            <div class="text-2xl font-bold text-slate-900 dark:text-white">{states}</div>
          </div>
        )}
        {minPremium && (
          <div>
            <div class="text-sm font-medium text-slate-600 dark:text-slate-400 mb-1">Min Premium</div>
            <div class="text-2xl font-bold text-slate-900 dark:text-white">${minPremium}</div>
          </div>
        )}
        {portal && (
          <div>
            <div class="text-sm font-medium text-slate-600 dark:text-slate-400 mb-1">Quote Speed</div>
            <div class="text-2xl font-bold text-slate-900 dark:text-white">Minutes</div>
          </div>
        )}
        {contact && (
          <div>
            <div class="text-sm font-medium text-slate-600 dark:text-slate-400 mb-1">Direct Contact</div>
            <div class="text-sm font-bold text-brand-600 dark:text-brand-400">{contact}</div>
          </div>
        )}
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="prose prose-lg prose-slate dark:prose-invert max-w-none
      prose-headings:font-bold
      prose-headings:text-slate-900 dark:prose-headings:text-white
      prose-h2:text-3xl prose-h2:mt-12 prose-h2:mb-6
      prose-h3:text-2xl prose-h3:mt-8 prose-h3:mb-4
      prose-p:text-slate-700 dark:prose-p:text-slate-300 prose-p:leading-relaxed
      prose-a:text-brand-600 dark:prose-a:text-brand-400 prose-a:no-underline hover:prose-a:underline
      prose-strong:text-slate-900 dark:prose-strong:text-white
      prose-ul:text-slate-700 dark:prose-ul:text-slate-300
      prose-li:my-1">
      <slot />
    </div>
  </div>

  <!-- Bottom CTA -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-16">
    <div class={`rounded-2xl bg-gradient-to-br ${gradient} dark:from-brand-700 dark:to-brand-950 p-8 md:p-12 relative overflow-hidden shadow-2xl`}>
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_70%_50%,rgba(255,255,255,0.15),transparent)]"></div>
      <div class="relative z-10 text-center">
        <h3 class="text-3xl md:text-4xl font-bold text-white mb-4">Ready to get started?</h3>
        <p class="text-lg text-brand-50 mb-8 max-w-2xl mx-auto">
          Experience modern insurance with our streamlined platform. Get a quote in minutes.
        </p>
        <div class="flex flex-wrap gap-4 justify-center">
          {portal && (
            <a
              href={portal}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center px-8 py-4 rounded-lg bg-white text-brand-600 hover:bg-brand-50 font-semibold shadow-lg hover:shadow-xl transition-all"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
              Launch Portal
            </a>
          )}
          <a
            href={`${base}contact`}
            class="inline-flex items-center px-8 py-4 rounded-lg border-2 border-white text-white hover:bg-white/10 font-semibold transition-all"
          >
            Speak with Underwriting
          </a>
        </div>
      </div>
    </div>
  </div>
</Layout>
