---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import ProductGrid from '../components/ProductGrid.astro';
import CTA from '../components/CTA.astro';

const t = 'Insurance built for the way modern teams actually work.';
const d = 'Quote, bind, and issue across Property, Flood, Excess Liability, and Inland Marine with speed and control.';
---
<Layout title={`Gridiron Insurance | ${t}`} description={d} url="https://gridironins.com/">
  <Hero title={t} subtitle={d} />

  <!-- Key Features Section -->
  <section class="max-w-7xl mx-auto px-4 py-16">
    <div class="grid gap-6 md:grid-cols-3">
      <div class="group rounded-2xl border border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-900 p-8 hover:shadow-xl hover:border-brand-300 dark:hover:border-brand-600 dark:hover:shadow-brand-500/10 transition-all duration-300">
        <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-brand-500 to-brand-700 flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold text-slate-900 dark:text-slate-100 mb-2">Fast quotes</h3>
        <p class="text-slate-600 dark:text-slate-400 leading-relaxed">Streamlined forms, sensible defaults, and immediate feedback.</p>
      </div>

      <div class="group rounded-2xl border border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-900 p-8 hover:shadow-xl hover:border-brand-300 dark:hover:border-brand-600 dark:hover:shadow-brand-500/10 transition-all duration-300">
        <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-brand-500 to-brand-700 flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold text-slate-900 dark:text-slate-100 mb-2">Clear terms</h3>
        <p class="text-slate-600 dark:text-slate-400 leading-relaxed">Transparent coverage details and tidy documents.</p>
      </div>

      <div class="group rounded-2xl border border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-900 p-8 hover:shadow-xl hover:border-brand-300 dark:hover:border-brand-600 dark:hover:shadow-brand-500/10 transition-all duration-300">
        <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-brand-500 to-brand-700 flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold text-slate-900 dark:text-slate-100 mb-2">Broker-friendly</h3>
        <p class="text-slate-600 dark:text-slate-400 leading-relaxed">Invite teams, track submissions, and keep momentum.</p>
      </div>
    </div>
  </section>
  <ProductGrid />
  <CTA />
</Layout>

