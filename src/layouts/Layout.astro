---
import "../styles/global.css";
import logo from "../assets/gridiron-logo-borderless.png";
import SocialIcon from "../components/SocialIcon.astro";

// Get base path for GitHub Pages compatibility
const base = import.meta.env.BASE_URL;

const {
  title = 'Gridiron Insurance',
  description = 'Modern MGA/MGU solutions across Property, Flood, Excess Liability, and Inland Marine.',
  url = 'https://gridironins.com',
  image
} = Astro.props;

// Construct full image URL for OG tags
// Always use canonical URL for OG images (they're external references)
const ogImage = image || `${url.replace(/\/$/, '')}/og-default.svg`;

// Get current path for active link detection
const currentPath = Astro.url.pathname;

// Helper function to check if a link is active
function isActive(path: string): boolean {
  // Remove trailing slashes for comparison
  const normalizedCurrent = currentPath.replace(/\/$/, '');
  const normalizedPath = path.replace(/\/$/, '');

  // Check if current path starts with the link path (for nested routes like /products/property)
  return normalizedCurrent === normalizedPath || normalizedCurrent.startsWith(normalizedPath + '/');
}
