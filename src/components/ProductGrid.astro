    {products.map(p => (
      <a href={`/products/${p.slug}`} class="group rounded-xl border border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-900 p-6 hover:shadow-xl hover:border-brand-400 dark:hover:border-brand-500 dark:hover:shadow-brand-500/10 transition-all duration-300">
        <div class="text-lg font-semibold text-slate-900 dark:text-slate-100">{p.name}</div>
        <p class="mt-3 text-slate-600 dark:text-slate-400 text-sm leading-relaxed">{p.blurb}</p>
        <span class="mt-5 inline-flex items-center gap-1 text-brand-600 dark:text-brand-400 text-sm font-semibold group-hover:gap-2 transition-all">
