---
const { eyebrow = 'Built for brokers and insureds', title, subtitle, ctaHref = 'https://app.gridironins.com', ctaText = 'Launch App' } = Astro.props;
---
<section class="relative overflow-hidden bg-white dark:bg-slate-950 transition-colors">
  <div class="absolute inset-0 -z-10 bg-[radial-gradient(900px_circle_at_20%_20%,#dbeafe,transparent)] dark:bg-[radial-gradient(900px_circle_at_20%_20%,rgba(37,99,235,0.1),transparent)]"></div>
  <div class="max-w-7xl mx-auto px-4 py-20 md:py-28">
    <div class="max-w-3xl">
      <p class="text-brand-600 dark:text-brand-400 font-semibold uppercase text-sm tracking-wide">{eyebrow}</p>
      <h1 class="mt-3 text-4xl md:text-6xl font-bold tracking-tight leading-tight text-slate-900 dark:text-white">
        {title}
      </h1>
      <p class="mt-5 text-lg md:text-xl text-slate-700 dark:text-slate-300 leading-relaxed">{subtitle}</p>
      <div class="mt-8 flex flex-wrap gap-4">
        <a href={ctaHref} class="inline-flex items-center justify-center rounded-lg px-6 py-3 bg-brand-600 text-white font-semibold hover:bg-brand-700 dark:bg-brand-500 dark:hover:bg-brand-600 shadow-lg hover:shadow-xl transition-all">{ctaText}</a>
        <a href="/products" class="inline-flex items-center justify-center rounded-lg px-6 py-3 border-2 border-slate-300 dark:border-slate-600 hover:border-brand-500 dark:hover:border-brand-500 text-slate-900 dark:text-slate-100 font-semibold hover:bg-slate-50 dark:hover:bg-slate-800 transition-all">Explore products</a>
      </div>
    </div>
  </div>
</section>
