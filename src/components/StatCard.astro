---
interface Props {
  icon?: string;
  value: string;
  label: string;
}

const { icon, value, label } = Astro.props;
---

<div class="p-6 rounded-xl bg-gradient-to-br from-brand-50 to-brand-100 dark:from-slate-800 dark:to-slate-700 border border-slate-200 dark:border-slate-700 hover:shadow-md hover:border-brand-500 dark:hover:border-brand-600 transition-all">
  {icon && <div class="text-3xl mb-2">{icon}</div>}
  <div class="text-3xl font-bold mb-1 text-brand-700 dark:text-white">{value}</div>
  <div class="text-sm text-slate-600 dark:text-slate-400">{label}</div>
</div>
